<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="2">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="2">
            <EditText
                android:id="@+id/lastText"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:focusable="false"
                android:hint="Enter num"
                android:textColorHint="#000000FF"
                android:inputType="number"
                android:textAlignment="textEnd"
                android:textColor="#7F7F7F"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:id="@+id/displayText"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:focusable="false"
                android:hint="Enter num"
                android:textColorHint="#000000FF"
                android:inputType="number"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </GridLayout>

        <GridLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="4">

            <Button
                android:id="@+id/button_clear"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#5b5b5e"
                android:onClick="btn_clear"
                android:text="C"
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_plusminus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#5b5b5e"
                android:onClick="btn_equal"
                android:text="+/-"
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#5b5b5e"
                android:onClick="backspace"
                android:text="B"
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_plus"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#ff9d07"
                android:onClick="btn_op"
                android:text="+"
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_seven"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#323232"
                android:onClick="btn_num"
                android:text="7"
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_eight"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#323232"
                android:onClick="btn_num"
                android:text="8"
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_nine"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#323232"
                android:onClick="btn_num"
                android:text="9"
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_minus"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#ff9d07"
                android:onClick="btn_op"
                android:text="-"
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_four"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#323232"
                android:onClick="btn_num"
                android:text="4"
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_five"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#323232"
                android:onClick="btn_num"
                android:text="5"
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_six"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#323232"
                android:onClick="btn_num"
                android:text="6"
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_multiply"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#ff9d07"
                android:onClick="btn_op"
                android:text="*"
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_one"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#323232"
                android:onClick="btn_num"
                android:text="1"
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_two"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#323232"
                android:onClick="btn_num"
                android:text="2"
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_three"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#323232"
                android:onClick="btn_num"
                android:text="3"
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_divide"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#ff9d07"
                android:onClick="btn_op"
                android:text="/"
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_zero"
                android:layout_columnSpan="2"
                android:width="190dp"
                android:height="95dp"
                android:backgroundTint="#323232"
                android:onClick="btn_num"
                android:text="0"
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#323232"
                android:onClick="btn_equal"
                android:text="."
                android:textSize="22dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_equal"
                android:layout_columnSpan="1"
                android:width="95dp"
                android:height="95dp"
                android:backgroundTint="#ff9d07"
                android:onClick="btn_equal"
                android:text="="
                android:textSize="22dp"
                tools:ignore="HardcodedText" />


        </GridLayout>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>